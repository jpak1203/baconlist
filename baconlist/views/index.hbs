<div class="container-fluid">	
	<div class="row">
		<div class="col-xs-6">
			<h1>BaconList</h1>
			<p>Welcome to BaconList</p>
		</div>
		<div class="bacon navbar-collapse col-xs-2">
			<ul class="nav navbar-nav">
				<li>
					<form method="GET" action="/share">
						<input type="submit" class="btn btn-primary" value="Share some bacon" />
					</form>
				</li>
			</ul>
		</div>
		<div class="collapse navbar-collapse links col-xs-4" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav navbar-right">
				<li>
				{{#if user}}
				<li>
					<p id="welcome"><strong>Hi,</strong> {{user.username}}</p>
				</li>
				<li>
					<a href="/logout">Log Out</a>
				</li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				{{else}}
				<li>
					<a href="/login">Log In</a>
				</li>
				<li>
					<a href="/signup">Sign Up</a>
				</li>
				{{/if}}
			</ul>
		</div>
	</div>
</div>

<div class="media container">
	<form method="POST" action="/">
		{{#each media}}
		<div id="media-link" class="row">
			<div class="col-xs-6">
				<a href="{{this.url}}" >{{this.title}}</a>
			</div>
			<div class="col-xs-2">
				<span id="voteNumber">votes: {{this.votes}}</span>
			</div>
			<div class="col-xs-4">
				<span>Vote for : </span><input type="submit" name="button" class="btn btn-default" value={{this.title}} />
			</div>
		</div>
		{{/each}}
	</form>
</div>

